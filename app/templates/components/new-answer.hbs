{{#if addNewAnswer}}
<h1>New Answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="body">Answer</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>


    <button {{action 'saveAnswer'}}>Save</button>
  </form>
</div>
{{else}}
<a class="waves-effect waves-light btn-large" {{action 'answerFormShow'}}>Add Answer</a>
{{/if}}
