{{#if updatePostForm}}
  <h4>Update {{post.author}}'s Question</h4>
    <div>
      <form>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body id="body" placeholder=post.body}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" placeholder=post.notes}}
        </div>

        <a class="waves-effect waves-light btn-large" {{action 'update' post}}>Save</a>
      </form>
    </div>
{{else}}
    <a class="waves-effect waves-light btn-large" {{action 'updatePostForm'}}>Update</a>
{{/if}}
