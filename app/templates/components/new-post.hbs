{{#if addNewPost}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="owner">Question</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'postFormShow'}}>New Post</button>
{{/if}}
